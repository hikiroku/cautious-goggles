{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "pythonVersion": "3.9",
        "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
        "includeFiles": [
          "cv2/data/haarcascade_frontalface_default.xml",
          "cv2/data/haarcascade_eye.xml"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "PYTHONUNBUFFERED": "1"
  }
}
