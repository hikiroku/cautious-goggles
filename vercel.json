{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "pythonVersion": "3.9",
        "installCommand": "pip install --upgrade pip && pip install -r requirements.txt && python -c \"import cv2; cv2.data.haarcascades\""
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "PYTHONUNBUFFERED": "1",
    "OPENCV_ENABLE_HEADLESS": "1"
  }
}
